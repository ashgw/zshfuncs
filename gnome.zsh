apply_gnome(){
gsettings set org.gnome.desktop.interface gtk-theme "Tokyonight-Dark-Storm-B-MB"
gsettings set org.gnome.shell.extensions.user-theme name "Tokyonight-Dark-Storm-B-MB"
gsettings set org.gnome.desktop.interface icon-theme "dracula-icons-main"
gsettings set org.gnome.desktop.interface font-name "San Francisco 14"
gsettings set org.gnome.desktop.interface monospace-font-name "San Francisco Mono 13"
gsettings set org.gnome.desktop.wm.preferences titlebar-font "San Francisco Bold 14"
}
